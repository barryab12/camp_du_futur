						<h1><field name="nom" placeholder="Nom"/></h1>
						<h2><field name="prenom" placeholder="Prénoms"/></h2>
						<h4><field name="prof" placeholder="Profession"/></h4>
						<group>
							<field name="dn"/>
							<field name="ville_n"/>
							<field name="matricule"/>
						</group>
					</div>					
				</sheet>							
			</form>
		</field>
	</record>

	<record id="mod_extrait_view_form" model="ir.ui.view">
		<field name="name">mod.extrait.view.form</field>
		<field name="model">mod.extrait</field>
		<field name="arch" type="xml">
			<form string="">
				<sheet>											
					<div class="oe_title">
						<h1>Extrait</h1>
						<h2><field name="nom" placeholder="Nom"/></h2>
						<h2><field name="prenom" placeholder="Prénoms"/></h2>
						<group>
							<field name="dn"/>
							<field name="ville_n"/>
							<field name="matricule"/>
							<field name="pere"/>
							<field name="mere"/>
						</group>
					</div>					
				</sheet>							
			</form>
		</field>
	</record>
	
