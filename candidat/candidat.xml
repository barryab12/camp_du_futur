<odoo>
	<record id="candidat_form" model="ir.ui.view">
		<field name="model">op.student</field>
		<field name="inherit_id" ref="openeducat_core.view_op_student_form"/>
		<field name="arch" type="xml"></field>
	</record>

	<act_window id="op_student_noter_action"
			name="Noter un Ã©tudiant"
			src_model="op.student"
			res_model="op.student.noter"
			view_mode="form"
			target="new"
			key2="client_action_multi"/>
	
	<record id="op_student_noter_form" model="ir.ui.view">
		<field name="name">op.student.noter.form</field>
		<field name="model">op.student.noter</field>
		<field name="arch" type="xml">
			<form string="">
				<group>
					<field name="cand"/>
				</group>
				<group>
					<field name="note"/>
				</group>
				<group>
					<field name="noteur"/>
					<field name="id_noteur"/>
				</group>
			</form>
		</field>
	</record>

	<record id="info_form" model="ir.ui.view">
		<field name="model">res.users</field>
		<field name="inherit_id" ref="base.view_users_simple_form"/>
		<field name="arch" type="xml">
			<field name="mobile" position="after">
				<field name="info" invisible="1">
					<tree>
						<field name="note"/>
						<field name="noteur"/>
					</tree>
				</field>
				<field name="info_note"/>
				<field name="moy"/>
			</field>
		</field>
	</record>
</odoo>