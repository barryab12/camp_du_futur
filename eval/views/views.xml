<odoo>
  <data>
    <!-- mod.pere action window -->
  	<record id="candidat_menu_action" model="ir.actions.act_window">
  		<field name="name">Candidat</field>
  		<field name="res_model">candidat.candidat</field>
  		<field name="view_type">form</field>
  		<field name="view_mode">tree,form</field>
  		<field name="domain">[]</field>
  	</record>

    <menuitem id="menu" name="Eval"/>
  	<menuitem id="candidat_menu" parent="menu" name="Candidat" action="candidat_menu_action"/>



  	<!-- candidat tree view -->
  	<record id="liste_candidat" model="ir.ui.view">
  		<field name="name">candidat.tree</field>
  		<field name="model">candidat.candidat</field>
  		<field name="arch" type="xml">
  			<tree>
  				<field name="name"/>
  				<field name="prenom"/>
  				<field name="niveau"/>
  				<field name="filiere"/>
  			</tree>
  		</field>
  	</record>


  	<act_window id="model_depot_wizard"
  				name="Dépot Devoir"
  				src_model="candidat.candidat"
  				res_model="depot.depot"
  				view_mode="form"
  				target="new"
  				key2="client_action_multi"/>


  	<!-- mod.pere form view -->
  	<record id="affiche_etudiant" model="ir.ui.view">
  		<field name="name">candidat.candidat.form</field>
  		<field name="model">candidat.candidat</field>
  		<field name="arch" type="xml">
  			<form string="">
  				<sheet>
  					<div class="oe_title">
  						<h1><field name="name" placeholder="Nom"/></h1>
  						<h2><field name="prenom" placeholder="Prénom(s)"/></h2>
  					</div>
  					<group>
  						<field name="niveau"/>
  						<field name="filiere"/>
  						<field name="note_chif" invisible="1">
                <tree>
                	<field name="note"/>
                </tree>
              </field>
              <field name="note"/>
  						<field name="identifiant"/>
  					</group>
  					<button name="%(model_depot_wizard)d" type="action" string="Noter un candidat" />
  				</sheet>
  			</form>
  		</field>
  	</record>

  	<record model="ir.ui.view" id="depot_form">
  		<field name="name">depot.depot.form</field>
  		<field name="model">depot.depot</field>
  		<field name="arch" type="xml">
  			<form>
  				<group>
  					<field name="candidat"/>
  					<field name="note"/>
  					<field name="identifiant_can"/>
  				</group>
  			</form>
  		</field>
  	</record>

    <record id="candidat_view_search" model="ir.ui.view">
      <field name="name">candidat.search</field>
      <field name="model">depot.depot</field>
      <field name="arch" type="xml">
        <search string="Rechercher">
          <field name="candidat"/>
          <field name="note"/>
        </search>
      </field>
    </record>
  </data>
</odoo>
