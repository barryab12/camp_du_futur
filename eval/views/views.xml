<odoo>
  <data>
    <!-- mod.pere action window -->
  	<record id="candidat_menu_action" model="ir.actions.act_window">
  		<field name="name">Candidat</field>
  		<field name="res_model">candidat.candidat</field>
  		<field name="view_mode">tree,form</field>
  		<field name="view_type">form</field>
  		<field name="help" type="html">
  			<p class="oe_view_nocontent_create">
  				<!-- Add Text Here -->
  			</p><p>
  				<!-- More details about what a user can do with this object will be OK -->
  			</p>
  		</field>
  	</record>


  	<!-- candidat tree view -->
  	<record id="liste_etudiant" model="ir.ui.view">
  		<field name="name">candidat.tree</field>
  		<field name="model">candidat.candidat</field>
  		<field name="arch" type="xml">
  			<tree>
  				<field name="name"/>
  				<field name="prenom"/>
  				<field name="niveau"/>
  				<field name="filiere"/>
  			</tree>
  		</field>
  	</record>


  	<act_window id="model_depot_wizard"
  				name="Dépot Devoir"
  				src_model="candidat.candidat"
  				res_model="depot.depot"
  				view_mode="form"
  				target="new"
  				key2="client_action_multi"/>


  	<!-- mod.pere form view -->
  	<record id="affiche_etudiant" model="ir.ui.view">
  		<field name="name">candidat.candidat.form</field>
  		<field name="model">candidat.candidat</field>
  		<field name="arch" type="xml">
  			<form string="">
  				<sheet>
  					<!-- <field name="photo" widget="image" class="oe_avatar"/>							 -->
  					<div class="oe_title">
  						<h1><field name="name" placeholder="Nom"/></h1>
  						<h2><field name="prenom" placeholder="Prénom(s)"/></h2>
  					</div>
  					<group>
  						<field name="niveau"/>
  						<field name="filiere"/>
  						<field name="nb_note" invisible="1"/>
  						<field name="note"/>

  					</group>
  					<button name="%(model_depot_wizard)d" type="action" string="Noter un étudiant" />
  				</sheet>
  			</form>
  		</field>
  	</record>

  	<record model="ir.ui.view" id="depot_form">
  		<field name="name">depot.depot.form</field>
  		<field name="model">depot.depot</field>
  		<field name="arch" type="xml">
  			<form>
  				<group>
  					<!-- <field name="nom_fichier" invisible="1"/> -->
  					<field name="etudiant" widget="selection"/>
  					<field name="student"/>
  					<field name="note" widget="radio"/>
  				</group>
  				<!-- <field name="etudiant"/> -->
  			</form>
  		</field>
  	</record>
  </data>
</odoo>
