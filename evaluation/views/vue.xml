<?xml version="1.0" encoding="UTF-8"?>
<odoo>


 <!-- menu -->
  <record id="candidat_menu_action" model="ir.actions.act_window">
    <field name="name">Candidats</field>
    <field name="res_model">mod.candidat</field>
    <field name="view_type">form</field>
    <field name="view_mode">tree,form</field>
    <field name="domain">[]</field>
    <field name="help" type="html">
      <p class="oe_view_nocontent_create"></p>
    </field>
  </record>
  <menuitem id="menu" name="Evaluation"/>
  <menuitem id="candidat_menu" name="Candidats" parent="menu" action="candidat_menu_action"/>








 <!-- form tree -->
  <record id="candidat_tree" model="ir.ui.view">
    <field name="name">Candidats</field>
    <field name="model">mod.candidat</field>
    <field name="arch" type="xml">
      <tree string="Candidats">
        <field name='cdt'/>
        <field name='nom'/>
        <field name='note'/>
      </tree>
    </field>
  </record>






        
 <!-- form view -->
  <record id="candidat_form" model="ir.ui.view">
    <field name="name">candidat.form</field>
    <field name="model">mod.candidat</field>
    <field eval="1" name="priority"/>
    <field name="arch" type="xml">
      <form string="Candidats">
        <sheet>
          <div class="oe_title">
            <group>
              <field name="cdt"/>
              <field name='nom'/>
              <field name='note'/>
            </group>
          </div>
        </sheet>
      </form>
    </field>
  </record>

</odoo>

