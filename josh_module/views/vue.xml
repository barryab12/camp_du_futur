<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <data>
    <record id="pere_menu_action" model="ir.actions.act_window">
      <field name="name">Pere</field>
      <field name="res_model">pere.pere</field>
      <field name="view_type">form</field>
      <field name="view_mode">kanban,tree,form</field>
      <field name="domain">[]</field>
      <field name="help" type="html">
        <p class="oe_view_nocontent_create">Enregistrer un pere</p>
      </field>
    </record>

    <menuitem id="menu" name="Extrait d'Acte de Naissance"/>
    <menuitem id="pere_menu" name="Pere" parent="menu" action="pere_menu_action"/>

    <record id="mere_menu_action" model="ir.actions.act_window">
      <field name="name">Mere</field>
      <field name="res_model">mere.mere</field>
      <field name="view_type">form</field>
      <field name="view_mode">kanban,tree,form</field>
      <field name="domain">[]</field>
      <field name="help" type="html">
        <p class="oe_view_nocontent_create">Enregistrer une mère</p>
      </field>
    </record>

    <menuitem id="menu" name="Extrait d'Acte de Naissance"/>
    <menuitem id="mere_menu" name="Mere" parent="menu" action="mere_menu_action"/>


    <record id="extrait_menu_action" model="ir.actions.act_window">
      <field name="name">Extrait</field>
      <field name="res_model">extrait.extrait</field>
      <field name="view_type">form</field>
      <field name="view_mode">tree,form</field>
      <field name="domain">[]</field>
      <field name="help" type="html">
        <p class="oe_view_nocontent_create">Imprimer un extrait</p>
      </field>
    </record>

    <menuitem id="menu" name="Extrait d'Acte de Naissance"/>
    <menuitem id="extrait_menu" name="Extrait" parent="menu" action="extrait_menu_action"/>

    <!-- form tree-->
    <record id="pere_tree" model="ir.ui.view">
      <field name="name">Pere</field>
      <field name="model">pere.pere</field>
      <field name="arch" type="xml">
        <tree string="Pere">
          <field name="nom" />
          <field name="prenom" />
          <field name="profession" />
          <field name="matricule" />
          <field name='date'/>
          <field name ='ville'/>
        </tree>
      </field>
    </record>

    <record id="mere_tree" model="ir.ui.view">
      <field name="name">Mere</field>
      <field name="model">mere.mere</field>
      <field name="arch" type="xml">
        <tree string="Mere">
          <field name="nom" />
          <field name="prenom" />
          <field name="profession" />
          <field name="matricule" />
          <field name='date'/>
          <field name ='ville'/>
        </tree>
      </field>
    </record>

    <record id="extrait_tree" model="ir.ui.view">
      <field name="name">Extrait</field>
      <field name="model">extrait.extrait</field>
      <field name="arch" type="xml">
        <tree string="Extrait">
          <field name="nom" />
          <field name="prenom" />
          <field name="date" />
          <field name='pere' />
          <field name="matricule" />
          <field name ='mere' />
          <field name ='ville'/>
        </tree>
      </field>
    </record>

    <!-- kanban view-->
    <record id="pere_kanban" model="ir.ui.view">
      <field name="name">pere.kanban</field>
      <field name="model">pere.pere</field>
      <field name="arch" type="xml">
        <kanban>
          <field name="id" />
          <field name="nom" />
          <field name="prenom" />
          <field name="profession" />
          <field name='date'/>
          <field name ='ville'/>
          <templates>
            <t t-name="kanban-box">
              <div class="oe_kanban_global_click">
                <div class="o_kanban_image">
                  <img t-att-src="kanban_image('pere.pere', 'photo', record.id.raw_value)"/>
                </div>
                <div class="oe_kanban_details">
                  <strong>
                    <field name="nom"/>
                    <field name="prenom"/>
                  </strong>
                  <div name="tags"/>
                  <field name="profession"/>
                  <div name="tags"/>
                  <field name="date"/>
                  <div name="tags"/>
                  <field name="ville"/>
                </div>
              </div>
            </t>
          </templates>
        </kanban>
      </field>
    </record>

    <record id="mere_kanban" model="ir.ui.view">
      <field name="name">mere.kanban</field>
      <field name="model">mere.mere</field>
      <field name="arch" type="xml">
        <kanban>
          <field name="id" />
          <field name="nom" />
          <field name="prenom" />
          <field name="profession" />
          <field name='date'/>
          <field name ='ville'/>
          <templates>
            <t t-name="kanban-box">
              <div class="oe_kanban_global_click">
                <div class="o_kanban_image">
                  <img t-att-src="kanban_image('mere.mere', 'photo', record.id.raw_value)"/>
                </div>
                <div class="oe_kanban_details">
                  <strong>
                    <field name="nom"/>
                    <field name="prenom"/>
                  </strong>
                  <div name="tags"/>
                  <field name="profession"/>
                  <div name="tags"/>
                  <field name="date"/>
                  <div name="tags"/>
                  <field name="ville"/>
                </div>
              </div>
            </t>
          </templates>
        </kanban>
      </field>
    </record>


    <!-- form view-->
    <record id="pere_view" model="ir.ui.view">
      <field name="name">pere.form</field>
      <field name="model">pere.pere</field>
      <field eval="1" name="priority"/>
      <field name="arch" type="xml">
        <form string="Pere">
          <sheet>
            <field name="photo" widget="image" string="Image" class="oe_avatar" />
            <div class="oe_title">
              <h1><field name="nom" placeholder="Nom" /></h1>
              <h2><field name="prenom" placeholder="Prénoms" /></h2>
              <group>
                <field name='date'/>
                <field name ='ville'/>
              </group>
              <group>
                <field name="matricule" />
                <field name='profession' placeholder="Profession"/>
              </group>
            </div>
          </sheet>
          <notebook>
            <page string="liste des Enfants">
              <field name="enfant">
                <tree>
                  <field name= "nom"/>
                  <field name= "prenom"/>
                  <field name= "mere"/>
                  <field name= "date"/>
                  <field name= "ville"/>
                  <field name= "matricule"/>
                </tree>
              </field>
            </page>
          </notebook>
        </form>
      </field>
    </record>

    <record id="mere_view" model="ir.ui.view">
      <field name="name">mere.form</field>
      <field name="model">mere.mere</field>
      <field eval="1" name="priority"/>
      <field name="arch" type="xml">
        <form string="Mere">
          <sheet>
            <field name="photo" widget="image" string="Image" class="oe_avatar" />
            <div class="oe_title">
              <h1><field name="nom" placeholder="Nom" /></h1>
              <h2><field name="prenom" placeholder="Prénoms" /></h2>
              <group>
                <field name='date'/>
                <field name ='ville'/>
              </group>
              <group>
                <field name="matricule" />
                <field name='profession' placeholder="Profession"/>
              </group>
            </div>
          </sheet>
          <notebook>
            <page string="liste des Enfants">
              <field name="enfant">
                <tree>
                  <field name= "nom"/>
                  <field name= "prenom"/>
                  <field name= "pere"/>
                  <field name= "date"/>
                  <field name= "ville"/>
                  <field name= "matricule"/>
                </tree>
              </field>
            </page>
          </notebook>
        </form>
      </field>
    </record>

    <record id="extrait_view" model="ir.ui.view">
      <field name="name">extrait.form</field>
      <field name="model">extrait.extrait</field>
      <field eval="1" name="priority"/>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <div class="oe_title">
              <h1><field name="nom" placeholder="Nom" /></h1>
              <h2><field name="prenom" placeholder="Prénoms" /></h2>
              <group>
                <field name='pere' />
                <field name ='mere' />
              </group>
              <group>
                <field name="matricule" />
                <field name='date' placeholder="date"/>
                <field name='ville' placeholder="ville"/>
              </group>
            </div>
          </sheet>
        </form>
      </field>
    </record>
  </data>

</odoo>
