<?xml version="1.0" encoding="UTF-8"?>
<odoo>


 <!-- menu -->
  <record id="evaluation_menu_action" model="ir.actions.act_window">
    <field name="name">evaluation</field>
    <field name="res_model">evaluation.evaluation</field>
    <field name="view_type">form</field>
    <field name="view_mode">tree,form</field>
    <field name="domain">[]</field>
    <field name="help" type="html">
      <p class="oe_view_nocontent_create">Noter les etudiants</p>
    </field>
  </record>
  <menuitem id="menu" name="Evaluation"/>
  <menuitem id="evaluation_menu" name="evaluation" parent="menu" action="evaluation_menu_action"/>








 <!-- form tree -->
  <record id="evaluation_tree" model="ir.ui.view">
    <field name="name">evaluation</field>
    <field name="model">evaluation.evaluation</field>
    <field name="arch" type="xml">
      <tree string="evaluation">
        <field name='noter'/>
        <field name="note"/>
        <field name="nom"/>
      </tree>
    </field>
  </record>

  <!-- evaluation search view -->
  <record id="evaluation_view_search" model="ir.ui.view">
    <field name="name">evaluation.view.search</field>
    <field name="model">evaluation.evaluation</field>
    <field name="arch" type="xml">
      <search string="Search">
        <field name='noter'/>
        <field name="nom"/>
      </search>
    </field>
  </record>






        
 <!-- form view -->
  <record id="evaluation_view" model="ir.ui.view">
    <field name="name">evaluation.form</field>
    <field name="model">evaluation.evaluation</field>
    <field eval="1" name="priority"/>
    <field name="arch" type="xml">
      <form string="Evaluation">
        <sheet>
          <div class="oe_title">
            <group>
              <field name="noter"/>
            </group>
            <group>
              <field name="note"/>
            </group>
            <group>
              <field name="nom" placeholder="Noms et Prenoms" />
            </group>
          </div>
        </sheet>
      </form>
    </field>
  </record>

</odoo>

