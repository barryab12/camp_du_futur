<odoo>
    <!-- op.note tree view -->
    <record id="op_note_view_tree" model="ir.ui.view">
        <field name="name">op.note.view.tree</field>
        <field name="model">op.note</field>
        <!-- <field name="domain">[('create_uid','=',user.id)]</field> -->
        <field name="arch" type="xml">
            <tree>
                <field name="etudiant"/>
                <field name="note"/>                
            </tree>
        </field>
    </record>

    <!-- op.note form view -->
    <record id="op_note_view_form" model="ir.ui.view">
        <field name="name">op.note.view.form</field>
        <field name="model">op.note</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <h1 style="text-align: center">NOTE</h1>
                    <group>
                        <field name="etudiant"/>
                    </group>
                    <group>
                        <field name="note"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- op.note action window -->
    <record id="op_note_action" model="ir.actions.act_window">
        <field name="name">Noter un étudant</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">op.note</field>
        <field name="view_mode">tree,form</field>
        <field name="view_type">form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Ajouter une note
            </p>
        </field>
    </record>

    <menuitem id="note_menu_act" name="Noter un étudiant"/>
    <menuitem id="menu_act" name="Noter un étudiant" parent="note_menu_act"  action="op_note_action"/>
</odoo>